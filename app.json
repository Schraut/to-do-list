{
  "expo": {
    "name": "to-do-list",
    "description": "A simple to do list",
    "slug": "to-do-list",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.danshrout.todolist",
      "versionCode": 1,
      "permissions": [
        "CAMERA"
      ]
    }
  }
}
